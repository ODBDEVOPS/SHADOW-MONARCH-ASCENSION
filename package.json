{
  "name": "shadow-monarch-mobile",
  "version": "2.0.0",
  "description": "RPG mobile Solo Leveling avec Three.js",
  "main": "index.html",
  "scripts": {
    "start": "live-server src --port=8080",
    "build": "node js/build.js",
    "deploy": "node js/build.js --deploy",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "lint": "eslint js/",
    "format": "prettier --write \"js/**/*.js\" \"css/**/*.css\"",
    "optimize": "python scripts/optimize-assets.py",
    "serve": "http-server dist -p 8080 -c-1"
  },
  "keywords": [
    "rpg",
    "mobile",
    "threejs",
    "solo-leveling",
    "pwa",
    "game"
  ],
  "author": "Votre Nom",
  "license": "MIT",
  "dependencies": {
    "three": "^0.158.0"
  },
  "devDependencies": {
    "live-server": "^1.2.2",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "terser": "^5.24.0",
    "clean-css": "^5.3.3",
    "fs-extra": "^11.2.0"
  },
  "browserslist": [
    "last 2 versions",
    "> 1%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
